

  <html>


    <body class="">

            <div class="justify-content-center align-items-center container">

              <div class="container">
                <div class="container">
                  <%= form_for @order, class: " form" do |f| %>
                  <h1 class="h3 mb-3 font-weight-normal">Review Muffin!</h1>

                      <%= f.label :muffin_url, class: "sr-only"%>
                      <%= f.text_field :muffin_url, class: "form-control", placeholder: "Pic Url" %>

                      <%= f.label :stars, class: "sr-only"%>
                      <%= f.text_field :stars, class: "form-control", placeholder: "Put a number" %>

                      <%= f.label :title, class: "sr-only"%>
                      <%= f.text_field :title, class: "form-control", placeholder: "Review Title" %>

                      <%= f.label :review, class: "sr-only"%>
                      <%= f.text_field :review, class: "form-control", placeholder: "Write your review here!" %>

                      <%= submit_tag "submit", class: "btn btn-lg btn-primary btn-block"%>
                    <% end %>

                </div>
              </div>

          </div>

    </body>
  </html>
